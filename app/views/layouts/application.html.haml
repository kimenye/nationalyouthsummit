!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      -#%title= content_for?(:title) ? yield(:title) : t(:blog)
      %title= browser_title(yield(:title))
      %meta{:content => content_for?(:description) ? yield(:description) : t(:description), :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body.blog{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation'
    %header.slim
      .skyline
    .partners.row
      .four.columns
        %img.logo{:src => "/assets/logo_youthsummit.jpg"}
      .six.columns
        %img.logo{:src => "/assets/summit_banner.jpg"}
      .two.columns
        %a.learn-more{:href => "/main/about-the-summit"}
          Learn More
    #main.body-bg{:role => "main"}
      .row
        .eight.columns
          = yield
        .four.columns
          = render 'layouts/sidebar'
    %footer
    / ! end of #container
