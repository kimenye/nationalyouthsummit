!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : t(:name)
      %meta{:content => content_for?(:description) ? yield(:description) : t(:description), :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    = render 'layouts/navigation'
    %header
      = render 'layouts/hero_slider'
      .skyline
    .partners
      .row
        .twelve.columns
          %img{:src => "/assets/partners.png"}
    #main.body-bg{:role => "main"}
      .row
        .eight.columns
          = yield
        .four.columns
          = render 'layouts/sidebar'
    %footer
    / ! end of #container
